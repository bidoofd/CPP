{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "clang++ - Build and debug active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "${fileDirname}/**.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
                "preLaunchTask": "g++.exe build active file"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}